<h1>id:<%= @task.id %>のタスク詳細ページ</h1>
 
<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
</table>

<%= link_to 'タスクの編集', edit_task_path(@task), class: 'btn btn-light' %>
<%= link_to 'タスクの削除', @task, method: :delete, data: {confirm: '本当に削除してよろしいですか?'}, class: 'btn btn-danger' %>